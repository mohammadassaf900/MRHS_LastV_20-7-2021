@model Mobile_Repair_History_System_MRHS.Models.User
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Share/_AdminMain.cshtml";
}
<script src="~/Contant/Admin/jquery.min.js"></script>
<h2 style="text-align:center;padding-top:50px;">Edit Profile</h2>
<div style="margin-top:30px;">
    @using (Html.BeginForm("Edit_Profile", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="container">
                <div class="row" style="margin-bottom:10px;">
                    <div class="col-12">
                        <div style="color:white; margin:0 auto;">
                            <div>
                                @Html.Editor("Username", "", new { htmlAttributes = new { @class = "form-control", placeholder = Model.UserName, id = "username" } })
                                @{
                                    string error1 = ViewBag.error;
                                    if (error1.Equals("User Name is Required") || error1.Equals("User name is already exist"))
                                    {
                                        <div class="text-danger" , style="color:red;">@ViewBag.error</div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div style="color:white; margin:0 auto;">
                            @Html.Editor("Phone", "", new { htmlAttributes = new { @class = "form-control", placeholder = Model.Phone, id = "phone" } })
                            @{
                                string error2 = ViewBag.error;
                                if (error2.Equals("Phone Number is Required") || error2.Equals("Phone Number Must Be 10 Digits"))
                                {
                                    <div class="text-danger" , style="color:red;">@ViewBag.error</div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div style="color:white;margin:0 auto;">
                            <input type="submit" value="Save" class="btn btn-block btn-primary btn-lg" style="border-radius:50px;margin-top:10px;" id="save" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <a href="~/user/ForgotPassword" id="action" style="border-radius: 50px;margin-top: 10px;" class="btn btn-block btn-primary btn-lg">Reset Password</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<script>
    var username = document.getElementById("username");
    var phone = document.getElementById("phone");
    var save = document.getElementById("save");
    $("#username").on("input", function () {
        if (this.value.length == 0) {
            save.setAttribute("disabled", "disabled");
        }
        else {
            save.removeAttribute("disabled");
        }
    });
    $("#Phone").on("input", function () {
        if (this.value.length == 0) {
