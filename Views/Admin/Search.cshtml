
@model Mobile_Repair_History_System_MRHS.Models.Invoice
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Share/_AdminMain.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/Contant/Admin/jquery.min.js"></script>
<section class="content" style="margin-bottom:25px;">
    <div class="container-fluid">
        <h2 class="text-center display-4">Search</h2>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                @using (Html.BeginForm("Search", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.DeviceID, new { @class = "form-control form-control-lg", placeholder = "Type your Device ID", id = "input" })
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-lg btn-default" id="search" style="display:none;">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<script>
    var search = document.getElementById("search");
    $("#input").on("input", function () {
        $("#count").text(this.value.length);
        if (this.value.length >= 5) {
            search.style.display = "block";
        }
        else {
            search.style.display = "none";
        }
    });
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
@Html.Action("Search_Result")