@model Mobile_Repair_History_System_MRHS.Models.User
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Share/_AdminMain.cshtml";
}
<script src="~/Contant/Admin/jquery.min.js"></script>
<section class="content">
    <div class="container-fluid">
        <div class="row" style="padding-top:60px;">
            <div class="card card-primary card-outline col-md-3" style="margin:auto auto;">
                <div class="card-body box-profile" style="margin-top:25px; height:400px;">
                    <h3 class="profile-username text-center">@Model.UserName</h3>
                    <p class="text-muted text-center">@Model.Role.RoleName</p>
                    <ul class="list-group list-group-unbordered mb-3" style="margin-top:50px;">
                        <li class="list-group-item">
                            <b>Email</b> <a class="float-right">@Model.Email</a>
                        </li>
                        <li class="list-group-item">
                            <b>Status</b> <a class="float-right">@Model.Status</a>
                        </li>
                        <li class="list-group-item">
                            <b>Phone</b> <a class="float-right">@Model.Phone</a>
                        </li>
                        <li class="list-group-item">
                            <b>Is Email Verified</b> <a class="float-right">@Model.IsEmailVerified</a>
                        </li>
                    </ul>
                    @Html.ActionLink("Edit Profile", "edit_profile", new { email = Model.Email }, new {@class = "btn btn-block btn-primary btn-lg" })
                </div>
            </div>
        </div>
    </div>
</section>