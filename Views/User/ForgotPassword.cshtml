@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Forgot Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'>
    <link href="~/Contant/Account/css/style.css" rel="stylesheet" />
    <link rel="icon" href="~/Contant/Home/assets/logo2.png" type="image/icon type">
</head>
<body class="main">
    <div id="particles-js"></div>
    <div class="container" style="margin-top:80px;">
        <div class="main-container-wrapper clearfix">
            <div class="logo">
                <i class="fa fa-envelope"></i>
            </div>
            <div class="welcome"><strong>Welcome,</strong> Please Enter Your Email</div>
            <div class="form-horizontal main-form">
                @using (Html.BeginForm())
                {
                    <div class="text-success" style="font-size:10px;color:red;">
                        @ViewBag.Message
                    </div>
                    <div class="form-group relative">
                        @Html.TextBox("Email", "", new { @class = "form-control input-lg", style = "background-color: rgba(40, 52, 67, 0.75);border: 1px solid #4a525f;color: #eee;border-left: 4px solid #93a5ab;", placeholder = "Email" })   
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-success btn-lg btn-block" style="margin-top:10px;" />
                    </div>
                }
            </div>
        </div>
    </div>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>
    <script src='https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js'></script>
    <script src="~/Contant/Account/js/mains.js"></script>
</body>
</html>