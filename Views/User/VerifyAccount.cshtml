@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Virfy Account</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'>
    <link href="~/Contant/Account/css/style.css" rel="stylesheet" />
    <link rel="icon" href="~/Contant/Home/assets/logo2.png" type="image/icon type">
</head>
<body class="main">
    <div id="particles-js"></div>
    <div class="container" style="margin-top:80px;">
        <div class="main-container-wrapper clearfix">
            <div class="logo">
                <i class="fa fa-check-circle"></i>
            </div>
            <div class="welcome"><strong>Welcome</strong></div>
            <div class="form-horizontal main-form">
                @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                {
                    <div class="alert alert-success" style=" text-align: center;">
                        <strong>Success!</strong> Your account has been activated successfully.
                    </div>
                    <div>
                        @Html.ActionLink("Login", "Login", "", new { @class = "btn btn-success btn-lg btn-block" })
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>Error!</strong> @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>
    <script src='https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js'></script>
    <script src="~/Contant/Account/js/mains.js"></script>
</body>
</html>
