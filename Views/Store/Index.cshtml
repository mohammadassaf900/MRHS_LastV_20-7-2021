@model IEnumerable<Mobile_Repair_History_System_MRHS.Models.MultipleClass>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_Main.cshtml";
}
<section class="about" id="about">
    <div class="container d-flex justify-content-between flex-column h-100">
        <div class="section-title flex-grow-1">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <h2 data-aos="heading-show">What Is MRHS</h2>
                        <p class="m-0">Get to know MRHS</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="section-content flex-grow-1">
            <div class="row justify-content-center align-items-center">
                <div class="col-md-6">
                    <div class="avatar-area m-auto">
                        <h3 style="text-align:center;">Top <b style="color: #f07f81">10</b> Stores</h3>
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Store Name</th>
                                    <th>Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    int rank = 1;
                                    foreach (var item in Model.OrderByDescending(x => x.store.Points))
                                    {
                                        if (item.user.Status == "Active")
                                        {
                                            <tr>
                                                <td>@rank</td>
                                                <td>@item.user.UserName</td>
                                                <td>@item.store.Points</td>
                                            </tr>
                                            rank++;
                                        }
                                        if (rank == 11)
                                        {
                                            break;
                                        }
                                    }
                                }
                                else
                                {
                                    <tr><td>No data</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-6 mt-5 mt-md-0">
                    <h3 class="m-0">MRHS-Mobile Repair History System</h3>
                    <p class="my-4">This system provides a service for archiving maintenance operations that have been carried out on mobile phones, where anyone can search for the device ID to see the maintenance operations that have been carried out on it, at any time, regardless of the phone model and the center that maintained it.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="section facts backgound-section" data-aos-id="facts">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-6 mt-4 mt-lg-0">
                <div class="fact-single text-center">
                    <div class="fact-icon">
                        <i class="fa fa-users"></i>
                    </div>
                    <div class="fact-info">
                        <span class="tmcounter" data-from="0" data-to="20" data-speed="1500">@ViewBag.countUser</span>+
                    </div>
                    <div class="fact-meta">
                        <span>Users</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 mt-4 mt-lg-0">
                <div class="fact-single text-center">
                    <div class="fact-icon">
                        <i class="fa fa-store"></i>
                    </div>
                    <div class="fact-info">
                        <span class="tmcounter" data-from="0" data-to="400" data-speed="1500">@ViewBag.countStore</span>+
                    </div>
                    <div class="fact-meta">
                        <span>Stores</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 mt-4 mt-lg-0">
                <div class="fact-single text-center">
                    <div class="fact-icon">
                        <i class="fa fa-receipt"></i>
                    </div>
                    <div class="fact-info">
                        <span class="tmcounter" data-from="0" data-to="7853" data-speed="1500">@ViewBag.countInvoice</span>+
                    </div>
                    <div class="fact-meta">
                        <span>Invoices</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>